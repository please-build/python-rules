subinclude("//:version")

def release_file(name:str, file_target:str, arch:str):
    return genrule(
        name = f"{name}_{arch}",
        srcs = [f"///{arch}" + canonicalise(file_target)],
        outs = [f"{name}-{VERSION}-{arch}"],
        cmd = "mv $SRC $OUT",
        labels = [f"release-file:{name}"],
    )

